---
interface Props {
	minutes: number|undefined;
}

let { minutes } = Astro.props;

// Round to nearest minute
if (!minutes) {
	minutes = 5;
}
let roundedMinutes = Math.round(minutes);

// If over 5 minutes, round to nearest 5 minutes
if (roundedMinutes > 5) {
	roundedMinutes = Math.round(roundedMinutes / 5) * 5;
}

---

<time datetime={roundedMinutes + 'm'}>
	{roundedMinutes
	} min
</time>
