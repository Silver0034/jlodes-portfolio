<style lang="scss">
.shareOptions {
	position: relative;
	color: hsl(var(--color-primary));

	button {
		background: none;
		border: none;
		color: inherit;
		cursor: pointer;
	}

	svg {
		width: 20px;
		fill: currentColor
	}

	ul {
		position: absolute;
		top: 1em;
		right: 0;
		padding: 0;
		background-color: hsl(var(--color-lighter));
		border-radius: 5px;
		list-style: none;
		width: 18ch;
		z-index: 1;
		filter: drop-shadow(0 0 1em hsl(var(--color-light)));

		&:not(.active) {
			display: none;
		}

		&::before {
			content: "";
			position: absolute;
			height: 0.75em;
			width: 0.75em;
			background-color: hsl(var(--color-lighter));
			transform: rotate(45deg);
			top: -0.25em;
			right: 0.6em;
			z-index: -1;
		}

		button {
			display: flex;
			gap: 1em;
			align-items: center;
			padding: 1em;
			width: 100%;
			text-align: left;

			&:hover, &:focus {
				color: hsl(var(--color-tertiary));
			}
		}

		li:first-child button {
			border-bottom: 1px solid hsl(var(--color-light));
		}
	}
}
</style>
<script>
	// Check if event listener is already added to body
	if (!document.body.classList.contains("shareOptionsListener")) {
		document.body.classList.add("shareOptionsListener");
		document.body.addEventListener("click", function(e) {
			const target = (e.target as HTMLElement)

			if (!target) return;
			// Listen for opening / closing share options
			if (target.closest(".shareOptionsTrigger")) {
				const trigger = target.closest(".shareOptionsTrigger")
				if (!trigger) return;
				const triggerSibling = trigger.nextElementSibling;
				if (!triggerSibling) return;
				triggerSibling.classList.toggle("active");
			} else {
				document.querySelectorAll(".shareOptions .active").forEach(function(el) {
					el.classList.remove("active");
				});
			}

			// Listen for copying the link
			if (target.closest(".shareOptions .copy")) {
				navigator.clipboard.writeText(window.location.href);
			}

			// Listen for sharing on twitter
			if (target.closest(".shareOptions .twitter")) {
				window.open("https://twitter.com/intent/tweet?text=" + encodeURIComponent(document.title) + "&url=" + encodeURIComponent(window.location.href), 'mywindow', 'width=350,height=500');
			}

			// Listen for sharing on facebook
			if (target.closest(".shareOptions .facebook")) {
				window.open("https://www.facebook.com/sharer/sharer.php?u=" + encodeURIComponent(window.location.href), 'mywindow', 'width=350,height=500');
			}

			// Listen for sharing on linkedin
			if (target.closest(".shareOptions .linkedin")) {
				window.open("https://www.linkedin.com/sharing/share-offsite/?url=" + encodeURIComponent(window.location.href), 'mywindow', 'width=350,height=500');
			}
		});
	}
</script>