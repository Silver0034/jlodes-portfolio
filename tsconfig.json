{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@content/*": ["src/content/*"],
			"@layouts/*": ["src/layouts/*"],
			"@pages/*": ["src/pages/*"],
			"@public/*": ["public/*"],
			"@styles/*": ["src/styles/*"],
			"@utilities/*": ["src/utilities/*"]
		}
	}
}
